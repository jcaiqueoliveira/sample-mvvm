<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    app:cardCornerRadius="@dimen/default_card_radius">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        app:columnCount="2"
        app:orientation="horizontal"
        app:rowCount="4">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/initialsName"
            android:layout_width="@dimen/width_initials"
            android:layout_height="@dimen/height_initials"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            app:autoSizeTextType="uniform"
            app:layout_gravity="left|center"
            app:layout_rowSpan="4"
            tools:text="ABC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/property"
            android:textSize="@dimen/small_text_size"
            app:layout_gravity="fill" />

        <TextView
            android:id="@+id/nameProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            tools:text="asdasdasd" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fantasy_name"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            tools:text="Corp" />
    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.CardView>